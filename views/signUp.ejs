<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hackgram</title>
    <link rel="stylesheet" href="css/bootstrap.min.css">
    <style>
        .gradient-custom-2 {
            /* fallback for old browsers */
            background: #F16634;

            /* Chrome 10-25, Safari 5.1-6 */
            background: -webkit-linear-gradient(to right, #F16634, #d8363a, #dd3675, #b44593);

            /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
            background: linear-gradient(to right, #F16634, #d8363a, #dd3675, #b44593);
        }

        @media (min-width: 768px) {
            .gradient-form {
                height: 100vh !important;
            }
        }

        @media (min-width: 769px) {
            .gradient-custom-2 {
                border-top-right-radius: .3rem;
                border-bottom-right-radius: .3rem;
            }
        }

        .landing-page {
            /* background: url(https://media.giphy.com/media/3o6UBpHgaXFDNAuttm/giphy.gif) no-repeat center center fixed; */
            background: url(https://media4.giphy.com/media/v1.Y2lkPTc5MGI3NjExOGYyMjUwMmIzNjE0YzllMWM4ZWE5MTA2NTE0ODBmYjc1NmIzNmQzYiZlcD12MV9pbnRlcm5hbF9naWZzX2dpZklkJmN0PWc/BHNfhgU63qrks/giphy.gif) no-repeat center center fixed;
            background-size: cover;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }
    </style>
</head>

<body class="landing-page">
    <div class="container gradient-form py-5">
        <div class="row d-flex justify-content-center align-items-center h-auto">
            <div class="col-xl-10">
                <div class="card rounded-3 text-black">
                    <div class="row g-0">
                        <div class="col-lg-6">
                            <div class="card-body p-md-5 mx-md-4">
                                <div class="text-center">
                                    <h4 class="mt-1 mb-5 pb-1 fst-italic fw-bolder">Hackgram</h4>
                                </div>
                                <form action="/signUp" method="post">
                                    <div class="form-outline mb-4">
                                        <label class="form-label" for="firstName">First Name</label>
                                        <input type="text" name="firstName" class="form-control" placeholder="Enter First Name"/>
                                        <% if (errors && errors.FirstName) { %>
                                            <label for="firstName" class="form-label" style="color: red;"><%= errors.FirstName %></label>                             
                                        <% } %>
                                    </div>
                                    <div class="form-outline mb-4">
                                        <label class="form-label" for="lastName">Last Name</label>
                                        <input type="text" name="lastName" class="form-control" placeholder="Enter Last Name"/>
                                        <% if (errors && errors.LastName) { %>
                                            <label for="lastName" class="form-label" style="color: red;"><%= errors.LastName %></label>                             
                                        <% } %>
                                    </div>
                                    <div class="form-outline mb-4">
                                        <label class="form-label" for="gender">Gender</label>
                                        <select class="form-select" name="gender">
                                            <option value="">Choose gender...</option>
                                            <% ['Male', 'Female'].forEach(el => { %>
                                                <option value="<%= el %>"><%= el %></option>
                                            <% }) %>
                                        </select>
                                        <% if (errors && errors.Gender) { %>
                                            <label for="gender" class="form-label" style="color: red;"><%= errors.gender %></label>                             
                                        <% } %>
                                    </div>
                                    <div class="form-outline mb-4">
                                        <label class="form-label" for="age">Age</label>
                                        <input type="number" name="age" class="form-control" placeholder="Enter Age"/>
                                        <% if (errors && errors.Age) { %>
                                            <label for="age" class="form-label" style="color: red;"><%= errors.Age %></label>                             
                                        <% } %>
                                    </div>
                                    <div class="form-outline mb-4">
                                        <label class="form-label" for="profilePicture">Profile Picture</label>
                                        <input type="text" name="profilePicture" class="form-control" placeholder="Enter Profile Picture"/>
                                        <% if (errors && errors.ProfilePicture) { %>
                                            <label for="profilePicture" class="form-label" style="color: red;"><%= errors.ProfilePicture %></label>                             
                                        <% } %>
                                    </div>
                                    <div class="form-outline mb-4">
                                        <label class="form-label" for="username">Username</label>
                                        <input type="text" name="username" class="form-control" placeholder="Enter Username"/>
                                        <% if (errors && errors.Username) { %>
                                            <label for="username" class="form-label" style="color: red;"><%= errors.Username %></label>                             
                                        <% } %>
                                    </div>
                                    <div class="form-outline mb-4">
                                        <label class="form-label" for="email">Email</label>
                                        <input type="email" name="email" class="form-control" placeholder="Enter Email"/>
                                        <% if (errors && errors.Email) { %>
                                            <label for="email" class="form-label" style="color: red;"><%= errors.Email %></label>                             
                                        <% } %>
                                    </div>
                                    <div class="form-outline mb-4">
                                        <label class="form-label" for="role">Role</label>
                                        <select class="form-select" name="role">
                                            <option value="">Choose role...</option>
                                            <% ['User', 'Admin'].forEach(el => { %>
                                                <option value="<%= el %>"><%= el %></option>
                                            <% }) %>
                                        </select>
                                        <% if (errors && errors.Role) { %>
                                            <label for="role" class="form-label" style="color: red;"><%= errors.Role %></label>                             
                                        <% } %>
                                    </div>
                                    <div class="form-outline mb-4">
                                        <label class="form-label" for="password">Password</label>
                                        <input type="password" name="password" class="form-control" placeholder="Enter Password"/>
                                        <% if (errors && errors.Password) { %>
                                            <label for="password" class="form-label" style="color: red;"><%= errors.Password %></label>                             
                                        <% } %>
                                    </div>
                                    <div class="text-center pt-1 mb-5 pb-1">
                                        <button class="btn btn-primary btn-block fa-lg gradient-custom-2 mb-3"
                                            type="submit">Sign Up</button>
                                    </div>
                                    <div class="d-flex align-items-center justify-content-center pb-4">
                                        <p class="mb-0 me-2">Already have an account?</p>
                                        <a href="/" class="btn btn-outline-danger">Log In</a>
                                    </div>
                                </form>
                            </div>
                        </div>
                        <div class="col-lg-6 d-flex align-items-center gradient-custom-2">
                            <div class="text-white px-3 py-4 p-md-5 mx-md-4">
                                <h4 class="mb-4">We are more than just a social media</h4>
                                <p class="small mb-0">we connect the developers.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="js/bootstrap.min.js"></script>
</body>

</html>